apiVersion: tekton.dev/v1alpha1
kind: PipelineResource
metadata:
  name:  webhook-git-source-kdemo-app 
spec:
  type: git
  params:
    - name: url
      value: https://github.com/jduimovich/kdemo-app.git  
    - name: revision
      value: master
---
apiVersion: tekton.dev/v1alpha1
kind: PipelineResource
metadata:
  name: webhook-image-ref-kdemo-app
spec:
  type: image
  params:
  - name: url
    value: jduimovich/kdemo-app:h19-m09-s08
---
apiVersion: tekton.dev/v1alpha1
kind: PipelineRun
metadata:
  name:  run-webhook-pipeline-h19-m09-s08
spec:
  serviceAccount:  tekton-dashboard
  timeout: "1h0m0s"  
  pipelineRef:
    name: fast-container-build-deploy 
  resources:
    - name: git-source
      resourceRef:
        name:  webhook-git-source-kdemo-app 
    - name: docker-image 
      resourceRef:
        name: webhook-image-ref-kdemo-app
  params: 
     - name: apply-directory
       value: pipelines 